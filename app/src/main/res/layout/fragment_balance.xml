<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/fragment_balance_cpv_loading"
        android:layout_width="@dimen/progress_bar_circular_size"
        android:layout_height="@dimen/progress_bar_circular_size"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_balance_available_money_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_balance_available_money"
        android:layout_marginTop="37dp"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/medium_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_balance_available_money_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textSize="48sp"
        android:textColor="@color/pale_orange"
        tools:text="65432 ₽"
        app:layout_constraintStart_toStartOf="@id/fragment_balance_available_money_title"
        app:layout_constraintTop_toBottomOf="@id/fragment_balance_available_money_title"/>

    <View
        android:id="@+id/fragment_balance_divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:layout_marginTop="37dp"
        android:background="@color/white_six"
        app:layout_constraintTop_toBottomOf="@id/fragment_balance_available_money_value"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_balance_expense_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="sans-serif-light"
        android:textSize="10sp"
        android:textColor="@color/medium_grey"
        android:text="@string/expenses_title"
        app:layout_constraintStart_toStartOf="@id/fragment_balance_available_money_title"
        app:layout_constraintTop_toBottomOf="@id/fragment_balance_divider1"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_balance_expense_value"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/dark_sky_blue"
        android:textSize="24sp"
        tools:text="20000₽"
        app:layout_constraintStart_toStartOf="@id/fragment_balance_expense_title"
        app:layout_constraintTop_toBottomOf="@id/fragment_balance_expense_title"/>

    <View
        android:id="@+id/fragment_balance_divider2"
        android:layout_width="@dimen/divider_size"
        android:layout_height="0dp"
        android:background="@color/white_six"
        app:layout_constraintTop_toBottomOf="@id/fragment_balance_divider1"
        app:layout_constraintBottom_toTopOf="@id/fragment_balance_divider3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_balance_income_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="18dp"
        android:fontFamily="sans-serif-light"
        android:textSize="10sp"
        android:textColor="@color/medium_grey"
        android:text="@string/incomes_title"
        app:layout_constraintStart_toEndOf="@id/fragment_balance_divider2"
        app:layout_constraintTop_toTopOf="@id/fragment_balance_expense_title"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_balance_income_value"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/apple_green"
        android:textSize="24sp"
        tools:text="85432₽"
        app:layout_constraintStart_toStartOf="@id/fragment_balance_income_title"
        app:layout_constraintTop_toTopOf="@id/fragment_balance_expense_value"/>

    <View
        android:id="@+id/fragment_balance_divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:layout_marginTop="26dp"
        android:background="@color/white_six"
        app:layout_constraintTop_toBottomOf="@id/fragment_balance_expense_value"/>

    <me.rubl.loftmoney.views.DiagramView
        android:id="@+id/fragment_balance_diagram"
        android:layout_width="@dimen/fragment_balance_diagram_size"
        android:layout_height="@dimen/fragment_balance_diagram_size"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_balance_divider3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>