<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_budget_item_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/item_budget_min_height"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="29dp"
        android:paddingBottom="29dp" >

        <TextView
            android:id="@+id/item_budget_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/ZeplinItem"
            tools:text="@string/budget_item_tools_name_text" />

        <TextView
            android:id="@+id/item_budget_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/primary_text_size"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/dark_sky_blue"
            android:gravity="end"
            tools:text="@string/budget_item_tools_price_text" />

    </LinearLayout>

</LinearLayout>